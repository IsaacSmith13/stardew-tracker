<?xml version='1.0' encoding='utf-8'?>
<widget id="com.isaactsmith.stardewtracker" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>stardew-tracker</name>
    <description>
        Track your progress on collecting the community center items. Has the ability to sort by season, as well as descriptions on how to get each item.
    </description>
    <author email="isaac13smith@gmail.com" href="https://www.linkedin.com/in/isaac13smith/">
        Isaac Smith
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <platform name="android">
        <icon src="img/icon/icon.png" width="1024" height="1024" />
    </platform>
</widget>
